{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "**/*.mts"],
  "exclude": ["./node_modules"],
  "ts-node": {
    "esm": true,
  },
  "plugins": [{
    "name": "eslint-plugin-import-access"
  }],
}
