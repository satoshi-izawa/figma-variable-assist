{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*.ts", "**/*.mts"],
  "exclude": ["./node_modules"],
  "ts-node": {
    "esm": true,
  }
}
